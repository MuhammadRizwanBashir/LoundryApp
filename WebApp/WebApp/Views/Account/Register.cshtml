@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <section class="login common-img-bg">
        <!-- Container-fluid starts -->
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="login-card card-block bg-white">
                        <form class="md-float-material" action="index.html">
                            <div class="text-center">
                                <img src="assets/images/logo-blue.png">
                            </div>
                            <h3 class="text-center txt-primary">@ViewBag.Title </h3>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="md-input-wrapper">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "md-form-control" })
                                <label>User Name</label>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="md-input-wrapper">
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "md-form-control" })
                                        <label>First Name</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="md-input-wrapper">
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "md-form-control" })
                                        <label>Last Name</label>
                                    </div>
                                </div>
                            </div>
                            <div class="md-input-wrapper">
                                @Html.TextBoxFor(m => m.Email, new { @class = "md-form-control" })
                                <label>Email Address</label>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="md-input-wrapper">
                                        @Html.TextBoxFor(m => m.City, new { @class = "md-form-control" })
                                        <label>City Name</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="md-input-wrapper">
                                        @Html.TextBoxFor(m => m.Phone, new { @class = "md-form-control" })
                                        <label>Phone Number</label>
                                    </div>
                                </div>
                            </div>
                            <div class="md-input-wrapper">
                                @Html.TextBoxFor(m => m.Address, new { @class = "md-form-control" })
                                <label>Address</label>
                            </div>
                            <div class="md-input-wrapper">
                                @Html.PasswordFor(m => m.Password, new { @class = "md-form-control" })
                                <label>Password</label>
                            </div>
                            <div class="col-xs-10 offset-xs-1">
                                <button type="submit" class="btn btn-primary btn-md btn-block waves-effect waves-light m-b-20">
                                    Sign up
                                </button>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 text-center">
                                    <span class="text-muted">Already have an account?</span>
                                    <a href="/Account/Login" class="f-w-600 p-l-5"> Sign In Here</a>

                                </div>
                            </div>
                        </form>
                        <!-- end of form -->
                    </div>
                    <!-- end of login-card -->
                </div>
                <!-- end of col-sm-12 -->
            </div>
            <!-- end of row-->
        </div>
        <!-- end of container-fluid -->
    </section>
}